<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="20.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.imagetest.SliderController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <ImageView fx:id="imageView" fitHeight="394.0" fitWidth="659.0" pickOnBounds="true" preserveRatio="true" />
   <HBox alignment="CENTER" prefHeight="83.0" prefWidth="660.0" style="-fx-border-color: gray; -fx-border-radius: 150;">
      <children>
         <Button mnemonicParsing="false" onAction="#onLastClick" prefHeight="27.0" prefWidth="61.0" style="-fx-background-color: white; -fx-border-color: gray; -fx-border-radius: 50;" text="Назад" />
        <Button onAction="#onPlayPause" prefHeight="38.0" prefWidth="35.0" style="-fx-background-color: white;">
            <graphic>
               <ImageView fx:id="button" fitHeight="43.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../../icons/play.png" />
                  </image>
               </ImageView>
            </graphic>
         </Button>
         <Button mnemonicParsing="false" onAction="#onNextClick" style="-fx-background-color: white; -fx-border-radius: 50; -fx-border-color: gray;" text="Дальше" />
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
   </HBox>
</VBox>
